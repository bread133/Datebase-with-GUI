<UserControl x:Class="NIR_7.CreateDataForTables"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NIR_7"
        mc:Ignorable="d" Height="450" Width="233"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <Button x:Name="ArtistButton" Content=" Генерация художников " Height="30" Width="193" Click="ArtistButton_Click" Margin="0,0,0,10"/>
            <Button x:Name="ExhibitionButton" Content=" Генерация выставок " Height="30" Width="193" Click="ExhibitionButton_Click" Margin="0,0,0,10"/>
            <Button x:Name="CollectionButton" Content=" Генерация коллекций картин " Height="30" Width="193" Click="CollectionButton_Click" Margin="0,0,0,10"/>
            <Button x:Name="ExhibitButton" Content=" Генерация картин " Height="30" Width="193" Margin="0,0,0,10" Click="ExhibitButton_Click"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" Margin="0,165,0,0" >
            <TextBlock TextWrapping="Wrap" Text="Введите количество генерируемых строк:" Margin="0,0,0,10"/>
            <TextBox x:Name="textNumber" Text="1" Width="30" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</UserControl>
