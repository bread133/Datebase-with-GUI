<UserControl x:Class="NIR_7.DeleteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NIR_7"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button x:Name="ArtistButton" Content=" Удаление художников " Height="30" Width="193" Click="ArtistButton_Click" Margin="0,0,0,10"/>
            <Button x:Name="ExhibitionButton" Content=" Удаление выставок " Height="30" Width="193" Click="ExhibitionButton_Click" Margin="0,0,0,10"/>
            <Button x:Name="CollectionButton" Content=" Удаление коллекций картин " Height="30" Width="193" Click="CollectionButton_Click" Margin="0,0,0,10"/>
            <Button x:Name="ExhibitButton" Content=" Удаление картин " Height="30" Width="193" Margin="0,0,0,10" Click="ExhibitButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
